    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        float Sueldo;
        
        
            String itemS = (String)combo.getSelectedItem();
            if("Administrador".equals(itemS))
            {
                Sueldo = (float)7000.00;
                total = (int)(Sueldo+bono+horaext+otrobono);
                textTotal.setText(String.valueOf(total));
            }
            else if("Jefe Sistemas".equals(itemS))
            {
                Sueldo = (float)15000.00;
                total = (int)(Sueldo+bono+horaext+otrobono);
                textTotal.setText(String.valueOf(total));
            }
            else if("Auditor".equals(itemS))
            {
                Sueldo = (float)9000.00;
                total = (int)(Sueldo+bono+horaext+otrobono);
                textTotal.setText(String.valueOf(total));
            }
            else if("Otro".equals(itemS))
            {
                Sueldo = (float)5000.00;
                total = (int)(Sueldo+bono+horaext+otrobono);
                textTotal.setText(String.valueOf(total));
            }
            else if("Elija una opción".equals(itemS))
            {
                JOptionPane.showMessageDialog(null, "Elija una opcion valida");
            }
      
        
        
        
        
    }                                        

    private void checkBonoActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void checkBonoItemStateChanged(java.awt.event.ItemEvent evt) {                                           
        // TODO add your handling code here:
        if(checkBono.isSelected())
            bono=250;
        else
            bono=0;
    }                                          

    private void checkHExtraItemStateChanged(java.awt.event.ItemEvent evt) {                                             
        // TODO add your handling code here:
        if(checkHExtra.isSelected())
            horaext=800;
        else
            horaext=0;
    }                                            

    private void checkOBonoItemStateChanged(java.awt.event.ItemEvent evt) {                                            
        // TODO add your handling code here:
        if(checkOBono.isSelected())
            otrobono=500;
        else
            otrobono=0;
    }                                           

    private void comboItemStateChanged(java.awt.event.ItemEvent evt) {                                       
        // TODO add your handling code here:
        
        String itemS = (String)combo.getSelectedItem();
        int N;    
            if("Administrador".equals(itemS))
            {
                N = 7000;
                textSueldo.setText(String.valueOf(N));
            }
            else if("Jefe Sistemas".equals(itemS))
            {
                N = 15000;
                textSueldo.setText(String.valueOf(N));
            }
            else if("Auditor".equals(itemS))
            {
                N = 9000;
                textSueldo.setText(String.valueOf(N));
            }
            else if("Otro".equals(itemS))
            {
                N = 5000;
                textSueldo.setText(String.valueOf(N));
            }
            else if("Elija una opción".equals(itemS))
            {
                textSueldo.setText(String.valueOf(0));
            }
        
    }                                      

    private void comboActionPerformed(java.awt.event.ActionEvent evt) {                                      
